<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize the primary color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Customize the text color -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">#757575</item>

        <!-- Customize the status bar color -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

        <!-- Customize the background color -->
        <item name="android:windowBackground">@color/backgroundLight</item>

        <!-- Customize the tab layout -->
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>

        <!-- Customize the button style -->
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button.UnelevatedButton</item>
    </style>

    <style name="DetailTitle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="DetailDescription" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

</resources>
