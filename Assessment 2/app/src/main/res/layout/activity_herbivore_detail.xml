<?xml version="1.0" encoding="utf-8"?>
<!-- activity_herbivore_detail.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abs"
    tools:context=".HerbivoreDetailActivity">

    <ImageView
        android:id="@+id/top_ban"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FE5500"/>

    <ImageView
        android:id="@+id/bot_ban"
        android:layout_below="@+id/top_ban"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/wave"/>

    <ImageView
        android:id="@+id/detail_image"
        android:layout_below="@id/bot_ban"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/detail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_title"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp" />

</RelativeLayout>